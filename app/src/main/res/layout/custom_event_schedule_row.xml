<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/holo_orange_dark"
    android:layout_margin="10dp"

    android:id="@+id/event_schedule_row">


    <TextView
        android:id="@+id/event_schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="2dp"

        android:text="Line and Wall Follower"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/event_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_schedule_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white"
        android:text="11 am"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/event_schedule_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_schedule_time"
        android:layout_marginLeft="16dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="F-104"
        android:textSize="18sp" />
</RelativeLayout>