<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="harsu.atmos2k15.atmos.com.atmos2015.ScheduleFragmentHeader">

    <android.support.design.widget.TabLayout
        android:id="@+id/event_schedule_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:tabIndicatorColor="@color/primary_dark"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/primary_dark"
        app:tabMode="fixed"

        />

    <android.support.v4.view.ViewPager

        android:id="@+id/event_schedule_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
