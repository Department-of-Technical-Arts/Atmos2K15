<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_schedule_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/event_schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:text="Line and Wall Follower"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <TextView

        android:id="@+id/event_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/event_schedule_venue"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="11 am - 10 Oct"
        android:textColor="@android:color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/event_schedule_venue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/event_schedule_name"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp"

        android:layout_toLeftOf="@+id/event_schedule_time"
        android:text="F-104"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>